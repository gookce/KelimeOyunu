<Page
    x:Class="KelimeOyunu.Son.Exit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KelimeOyunu.Son"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar Opacity="0.7" Foreground="#fff6d6" ClosedDisplayMode="Minimal" Background="#FF3C9AB7" >
            <AppBarButton x:ConnectionId='1' Icon="Home" x:Name="appbtnhome"                         />
        </CommandBar>
    </Page.BottomAppBar>
    <Grid >
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/back.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Opacity="0.7" Grid.Row="0" Background="#FF3C9AB7" BorderBrush="#FF3C9AB7" Grid.ColumnSpan="2" BorderThickness="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
            <TextBlock TextWrapping="Wrap" Text="Oyun Bitti !" FontSize="36" TextAlignment="Center" Foreground="#FFFBF2F2"/>
        </Border>
        <TextBlock x:ConnectionId='2' x:Name="txtpoint" TextAlignment="Left" Text="Puanınız : " FontSize="30" Grid.Row="2" Grid.Column="0" Foreground="#FFFBF2F2" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <TextBlock x:ConnectionId='3' x:Name="txtpass" Grid.RowSpan="2" TextAlignment="Center" FontWeight="Bold" FontSize="20" Grid.ColumnSpan="2" TextWrapping="Wrap" Grid.Row="3" Grid.Column="0" Foreground="#FFFBF2F2" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <TextBlock x:ConnectionId='4' x:Name="txtpuan" TextAlignment="Left" Grid.Row="2" FontSize="30" Grid.Column="1"  Foreground="#FFFBF2F2" HorizontalAlignment="Left" VerticalAlignment="Bottom"  />
        <Button x:ConnectionId='5' x:Name="txttry" Opacity="0.7" Content="Yeniden Dene" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="163"                      FontSize="20" Background="#FF3C9AB7" BorderBrush="#FF3C9AB7" Foreground="#FFFBF2F2" Margin="0,0.2" />
    </Grid>
</Page>


